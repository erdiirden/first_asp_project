@{
    ViewData["Title"] = "Anasayfa";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">LOGO</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" href="/home/index">Anasayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/home/Sayfa1">Sayfa1</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/home/Sayfa2">Sayfa2</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- İçerik -->
    <div class="container mt-5">
        <h1>@RenderBody()</h1>
        <p>@RenderSection("altyazi",false)</p> @*false olursa sayfaların hepsinde kullanılmasına gerek olmaz.Aksi taktirde mecburidir.*@
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
